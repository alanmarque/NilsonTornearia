<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMenuLateral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvDescription"
        android:text="  A empresa surgiu nos anos 90 em Osasco e primeiramente era conhecida como Lucas Tornearia, depois de uns anos e parcerias que não deram certo, foi trocado o nome e a localidade. Hoje conhecida como Nilson Tornearia e em Barueri, a empresa tem uma média de mais de 100 clientes e algumas parcerias essenciais para a terceirização de serviços como a solda mais pesada de alguns materiais, lembrando que a tornearia é controlada por um homem só, a tornearia da conta de cerca de 50 a 80 demandas por mês."
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:justificationMode="inter_word" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_lateral"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_lateral_cabecalho"
        app:menu="@menu/menu_lateral"

        >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>